.review
	padding 60px 0
	
.review-item__content
	width 100%
	max-width 960px
	margin 0 auto
		
	iframe
		width 100%
		height auto 
		min-height 500px	

.review-slider
	position relative
	.slick-arrow
		position absolute
		top 50%
		margin-top -30px
		z-index 2
		cursor pointer		

.review-slider__next
	right 0
	sprite($s-review-next)	
	
.review-slider__prev
	left 0
	sprite($s-review-prev)	
		
