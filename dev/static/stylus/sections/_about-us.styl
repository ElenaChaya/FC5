.about-us
	padding 100px 0
	
	.container
		display flex 
		flex-wrap wrap 
		justify-content space-between
		
.about-us__img, .about-us__text
	flex-basis auto 
	width 50%

.about-us__img
	position relative
	width 100%
	max-width 380px
	height 310px
	margin 0 auto 
	background gradientBackground
	
	img 
		position absolute 
		top -50px
		left 50%
		transform translatex(-50%)
		z-index 1
		
	&:after
		content ''
		position absolute
		top 20px
		bottom 20px
		left 20px
		right 20px
		//display block // t
		background-color white

	
.about-us__text
	font-size 24px
	line-height 40px
	
	p 
		margin-bottom 30px
		
		&:last-child
			margin-bottom 0




		