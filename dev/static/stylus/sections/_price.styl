.price
	padding 60px 0

.price-slider

	position relative
	.slick-arrow
		position absolute
		top 50%
		margin-top -30px
		z-index 2
		cursor pointer		

.price-slider-next, .price-slider-prev
	display none


.price-slider-next
	right 0
	sprite($s-price-arrow-right)	
	
.price-slider-prev
	left 0
	sprite($s-price-arrow-left)	
		

.price-item
	position relative
	background-color white
	height 700px
	padding 30px
	margin 0 10px 10px	
	border-radius 25px
	box-shadow 0 4px 7px 1px rgba(0, 0, 0, .15)
	
.price-item__title
	text-align center
	font-family sectionTitleFont
	font-size 24px
	
	&:after
		content ''
		display block
		width 20px
		height 5px
		margin 20px auto 25px
		border-radius 5px
		background blueColor


.g-list
	
	.price-list__descr
		display block
		margin-bottom 15px
		font-size 14px
		line-height 20px
		color lightGrayTextColor
		

.price-item__bottom
	position absolute
	bottom 30px
	left 0px
	right 0px
	padding 30px 30px 0
	border-top 1px solid priceBorderColor
	
	.g-btn
		box-shadow 0 4px 7px 1px rgba(0, 0, 0, .15)
		
	
.price-item__number
	display block
	margin-bottom 10px
	text-align center
	font-size 32px
	font-family boldFont
	
		     	
