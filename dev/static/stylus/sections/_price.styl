.price
	padding 60px 0
	
.price-item
	position relative
	background-color white
	height 700px
	padding 30px
	margin 0 10px	
	border-radius 25px
	
.price-item__title
	text-align center
	font-family sectionTitleFont
	font-size 24px
	
	&:after
		content ''
		display block
		width 20px
		height 5px
		margin 20px auto 25px
		border-radius 5px
		background blueColor
		
.price-list
	li 
		position relative
		padding-left 20px
		margin-bottom 10px
		font-size 18px
		line-height 30px
		
		&:after
			content ''
			display block
			position absolute
			left 0
			top 18px
			width 6px
			height 6px
			border-radius 50%
			background-color blueColor
			
		b
			display inline-block 
			

	.price-list__descr
		display block
		margin-bottom 15px
		font-size 14px
		line-height 20px
		color lightGrayTextColor
		

.price-item__bottom
	position absolute
	bottom 30px
	left 0px
	right 0px
	padding 30px 30px 0
	border-top 1px solid priceBorderColor
	
.price-item__number
	display block
	margin-bottom 10px
	text-align center
	font-size 32px
	font-family boldFont
	
		     	
