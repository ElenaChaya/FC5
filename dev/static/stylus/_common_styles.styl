.logo
	background gradientBackground
	-webkit-background-clip text 
	color transparent
	

	span
		display block
		margin-bottom 10px
		text-transform uppercase
		font-family boldesFont
		&:last-child
			margin-bottom 0
				
h1
	//margin-top 120px //l
	width 100%
	margin-bottom 100px 
	color black
	font-size 48px
	line-height 70px
	font-family boldFont
	text-align center
	
.open-form__wrap
	position relative
	width 95%
	max-width 380px
	height 290px
	margin 0 auto
	padding 40px
	background-color rgba(0,15,0,0.3)
	border-radius  25px
	
.g-input
	display block
	width 100%
	height 50px
	line-height 50px
	padding 0 25px
	margin-bottom 30px
	background-color white
	color lightGrayTextColor
	border-radius 30px
	border 0
	

.open-form__success
	display none
	text-align center
	color black
	line-height 30px
	&:before
		content ''
		display block
		sprite($s-pink-success)
		margin 0 auto 20px
		
.g-btn
	display block
	width 100%
	height 50px
	line-height 44px
	text-align center
	color white
	border-radius 30px
	border 0
	box-shadow 0 6px 12px 5px rgba(0, 0, 0, .2)
	background gradientBackground
	cursor pointer

