@media screen and (max-width 1100px)
	.main-nav__list
		
		li 
			margin-right 30px
			
	h1
		font-size 40px
		line-height 50px
		

@media screen and (max-width 950px)
	.main-nav__list
		
		li 
			margin-right 15px
			
	h1
		font-size 35px
		line-height 40px
		

@media screen and (max-width 900px)
	.wrapper
		position relative
		width 100%
		max-width 900px
		overflow hidden
		
	.nav-mobile
		display block

	.main-nav__list
		//display none
		position absolute
		right -900px
		top 95px
		width 100%
		max-width 320px
		padding 45px 0 45px 30px
		z-index 1
		background-color purpureColor
		transition all linear .8s
		
		
		li 
			display block 
			margin-bottom 40px
			
			&:last-child
				margin-bottom 0
				
	.top-banner
		min-height 700px
		
	h1
		margin-bottom 80px
				

@media screen and (max-width 500px)
	
	h1
		padding 0 5px
		font-size 24px
		line-height 40px
		
@media screen and (max-width 350px)
	
	h1
		font-size 22px
		

		